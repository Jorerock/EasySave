<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <!-- Main Window -->
    <sys:String x:Key="Main_Title">EasySave</sys:String>
    <sys:String x:Key="Header_Title">EasySave - Backup Manager</sys:String>

    <sys:String x:Key="Jobs_Header">Backup Jobs</sys:String>
    <sys:String x:Key="Col_Name">Name</sys:String>
    <sys:String x:Key="Col_Type">Type</sys:String>
    <sys:String x:Key="Col_Source">Source</sys:String>
    <sys:String x:Key="Col_Target">Target</sys:String>
    <sys:String x:Key="Col_Encrypted">Encrypted</sys:String>

    <sys:String x:Key="Actions_Header">Actions</sys:String>
    <sys:String x:Key="Btn_Create">Create New Job</sys:String>
    <sys:String x:Key="Btn_RunSelected">Run Selected</sys:String>
    <sys:String x:Key="Btn_RunAll">Run All Jobs</sys:String>
    <sys:String x:Key="Btn_Delete">Delete Job</sys:String>
    <sys:String x:Key="Btn_Settings">AppSettings</sys:String>

    <sys:String x:Key="Details_Header">Selected Job Details</sys:String>
    <sys:String x:Key="Lbl_Name">Name:</sys:String>
    <sys:String x:Key="Lbl_Type">Type:</sys:String>
    <sys:String x:Key="Lbl_Source">Source:</sys:String>
    <sys:String x:Key="Lbl_Target">Target:</sys:String>
    <sys:String x:Key="Lbl_Encryption">Encryption:</sys:String>

    <sys:String x:Key="Msg_Success">Success</sys:String>
    <sys:String x:Key="Msg_Settings">Settings</sys:String>
    <sys:String x:Key="Msg_SettingsSaved">Settings saved successfully.</sys:String>

    <!-- Common -->
    <sys:String x:Key="Common_Save">Save</sys:String>
    <sys:String x:Key="Common_Cancel">Cancel</sys:String>
    <sys:String x:Key="Common_Create">Create</sys:String>
    <sys:String x:Key="Common_PathHint">(Copy-paste the path or type it)</sys:String>

    <!-- Settings Window -->
    <sys:String x:Key="Settings_Title">App Parameters</sys:String>
    <sys:String x:Key="Settings_ExtensionsToEncrypt">Extensions To Encrypt</sys:String>
    <sys:String x:Key="Settings_BusinessSoftwarePath">Business Software Path :</sys:String>
    <sys:String x:Key="Settings_BusinessSoftwareHint">(Copy-paste the path or type it)</sys:String>
    <sys:String x:Key="Settings_BusinessSoftwareTooltip">Example: C:\Windows\System32\calc.exe</sys:String>
    <sys:String x:Key="Settings_Language">Language</sys:String>
    <sys:String x:Key="Settings_LogFormat">Log Format</sys:String>

    <!-- Create Job Window -->
    <sys:String x:Key="CreateJob_Title">Create Backup Job</sys:String>
    <sys:String x:Key="CreateJob_JobName">Job Name:</sys:String>
    <sys:String x:Key="CreateJob_SourceDirectory">Source Directory:</sys:String>
    <sys:String x:Key="CreateJob_TargetDirectory">Target Directory:</sys:String>
    <sys:String x:Key="CreateJob_BackupType">Backup Type:</sys:String>

    <sys:String x:Key="BackupType_Full">Full</sys:String>
    <sys:String x:Key="BackupType_Differential">Differential</sys:String>

    <sys:String x:Key="CreateJob_EncryptionOptions">Encryption Options</sys:String>
    <sys:String x:Key="CreateJob_EnableEncryption">Enable Encryption</sys:String>
    <sys:String x:Key="CreateJob_EncryptionKey">Encryption Key:</sys:String>
    <sys:String x:Key="CreateJob_ExtensionsToEncrypt">Extensions to Encrypt:</sys:String>
    <sys:String x:Key="CreateJob_ExtensionsHint">(e.g., .docx .pdf .txt - leave empty for all files)</sys:String>

</ResourceDictionary>
