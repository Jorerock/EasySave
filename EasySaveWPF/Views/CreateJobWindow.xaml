<Window x:Class="EasySave.WPF.Views.CreateJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Backup Job" Height="686" Width="550"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Job Name -->
        <StackPanel Grid.Row="0" Margin="0,5">
            <TextBlock Text="Job Name:" FontWeight="Bold"/>
            <TextBox x:Name="JobNameTextBox" Margin="0,5" Height="30"/>
        </StackPanel>

        <!-- Source Directory -->
        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="Source Directory:" FontWeight="Bold"/>
            <TextBlock Text="(Copy-paste the path or type it)" 
                       FontSize="11" Foreground="Gray" Margin="0,2"/>
            <TextBox x:Name="SourceTextBox" 
                     Margin="0,5" 
                     Height="30"
                     ToolTip="Example: C:\Users\YourName\Documents"/>
        </StackPanel>

        <!-- Target Directory -->
        <StackPanel Grid.Row="2" Margin="0,5">
            <TextBlock Text="Target Directory:" FontWeight="Bold"/>
            <TextBlock Text="(Copy-paste the path or type it)" 
                       FontSize="11" Foreground="Gray" Margin="0,2"/>
            <TextBox x:Name="TargetTextBox" 
                     Margin="0,5" 
                     Height="30"
                     ToolTip="Example: D:\Backups\MyBackup"/>
        </StackPanel>

        <!-- Backup Type -->
        <StackPanel Grid.Row="3" Margin="0,5">
            <TextBlock Text="Backup Type:" FontWeight="Bold"/>
            <ComboBox x:Name="BackupTypeComboBox" Margin="0,5" Height="30">
                <ComboBoxItem Content="Full" IsSelected="True"/>
                <ComboBoxItem Content="Differential"/>
            </ComboBox>
        </StackPanel>

        <!-- Encryption Options -->
        <GroupBox Grid.Row="4" Header="Encryption Options" Margin="0,10">
            <StackPanel>
                <CheckBox x:Name="EnableEncryptionCheckBox" 
                          Content="Enable Encryption" 
                          Margin="5"
                          Checked="EnableEncryption_Changed"
                          Unchecked="EnableEncryption_Changed"/>

                <StackPanel x:Name="EncryptionPanel" IsEnabled="False" Margin="10,5">
                    <TextBlock Text="Encryption Key:" FontWeight="Bold" Margin="0,5"/>
                    <TextBox x:Name="EncryptionKeyTextBox" Margin="0,5" Height="30"/>

                    <TextBlock Text="Extensions to Encrypt:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <TextBlock Text="(e.g., .docx .pdf .txt - leave empty for all files)" 
                               FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox x:Name="ExtensionsTextBox" Margin="0,5" Height="30"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Create" Width="100" Height="35" 
                    Margin="0,0,10,0" Click="Create_Click" 
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="Cancel" Width="100" Height="35" 
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>