<Window x:Class="EasySave.WPF.Views.CreateJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource CreateWindow_Title}"
        Height="686" Width="550"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Job Name -->
        <StackPanel Grid.Row="0" Margin="0,5">
            <TextBlock Text="{DynamicResource CreateJob_JobName}" FontWeight="Bold"/>
            <TextBox x:Name="JobNameTextBox" Margin="0,5" Height="30"/>
        </StackPanel>

        <!-- Source Directory -->
        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="{DynamicResource CreateJob_SourceDir}" FontWeight="Bold"/>
            <TextBlock Text="{DynamicResource CreateJob_PathHint}"
                       FontSize="11" Foreground="Gray" Margin="0,2"/>
            <TextBox x:Name="SourceTextBox"
                     Margin="0,5"
                     Height="30"
                     ToolTip="{DynamicResource CreateJob_SourceTooltip}"/>
        </StackPanel>

        <!-- Target Directory -->
        <StackPanel Grid.Row="2" Margin="0,5">
            <TextBlock Text="{DynamicResource CreateJob_TargetDir}" FontWeight="Bold"/>
            <TextBlock Text="{DynamicResource CreateJob_PathHint}"
                       FontSize="11" Foreground="Gray" Margin="0,2"/>
            <TextBox x:Name="TargetTextBox"
                     Margin="0,5"
                     Height="30"
                     ToolTip="{DynamicResource CreateJob_TargetTooltip}"/>
        </StackPanel>

        <!-- Backup Type -->
        <StackPanel Grid.Row="3" Margin="0,5">
            <TextBlock Text="{DynamicResource CreateJob_BackupType}" FontWeight="Bold"/>
            <ComboBox x:Name="BackupTypeComboBox" Margin="0,5" Height="30">
                <ComboBoxItem Content="{DynamicResource BackupType_Full}" IsSelected="True"/>
                <ComboBoxItem Content="{DynamicResource BackupType_Differential}"/>
            </ComboBox>
        </StackPanel>

        <!-- Encryption Options -->
        <GroupBox Grid.Row="4" Header="{DynamicResource CreateJob_EncryptionOptions}" Margin="0,10">
            <StackPanel>
                <CheckBox x:Name="EnableEncryptionCheckBox"
                          Content="{DynamicResource CreateJob_EnableEncryption}"
                          Margin="5"
                          Checked="EnableEncryption_Changed"
                          Unchecked="EnableEncryption_Changed"/>

                <StackPanel x:Name="EncryptionPanel" IsEnabled="False" Margin="10,5">
                    <TextBlock Text="{DynamicResource CreateJob_EncryptionKey}" FontWeight="Bold" Margin="0,5"/>
                    <TextBox x:Name="EncryptionKeyTextBox" Margin="0,5" Height="30"/>

                    <TextBlock Text="{DynamicResource CreateJob_ExtensionsEncrypt}" FontWeight="Bold" Margin="0,10,0,5"/>
                    <TextBlock Text="{DynamicResource CreateJob_ExtensionsHint}"
                               FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox x:Name="ExtensionsTextBox" Margin="0,5" Height="30"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{DynamicResource Btn_Create}" Width="100" Height="35"
                    Margin="0,0,10,0" Click="Create_Click"
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="{DynamicResource Btn_Cancel}" Width="100" Height="35"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
