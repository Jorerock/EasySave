<Window x:Class="EasySave.WPF.Views.CreateJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource CreateJob_Title}"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock FontWeight="Bold" Text="{DynamicResource CreateJob_JobName}" />
                <TextBox x:Name="JobNameTextBox" Height="30" Margin="0,5,0,15"/>

                <TextBlock FontWeight="Bold" Text="{DynamicResource CreateJob_SourceDirectory}" />
                <TextBlock Text="{DynamicResource Common_PathHint}" FontSize="11" Foreground="Gray" Margin="0,2"/>
                <TextBox x:Name="SourceTextBox" Height="30" Margin="0,5,0,15"/>

                <TextBlock FontWeight="Bold" Text="{DynamicResource CreateJob_TargetDirectory}" />
                <TextBlock Text="{DynamicResource Common_PathHint}" FontSize="11" Foreground="Gray" Margin="0,2"/>
                <TextBox x:Name="TargetTextBox" Height="30" Margin="0,5,0,15"/>

                <TextBlock FontWeight="Bold" Text="{DynamicResource CreateJob_BackupType}" />
                <ComboBox x:Name="BackupTypeComboBox" Height="30" Margin="0,5,0,15">
                    <ComboBoxItem Content="{DynamicResource BackupType_Full}" IsSelected="True"/>
                    <ComboBoxItem Content="{DynamicResource BackupType_Differential}"/>
                </ComboBox>

                <GroupBox Header="{DynamicResource CreateJob_EncryptionOptions}" Margin="0,5,0,15">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="EnableEncryptionCheckBox"
                                  Content="{DynamicResource CreateJob_EnableEncryption}"
                                  Checked="EnableEncryption_Changed"
                                  Unchecked="EnableEncryption_Changed"/>

                        <StackPanel x:Name="EncryptionPanel" IsEnabled="False" Margin="0,10,0,0">
                            <TextBlock FontWeight="Bold" Text="{DynamicResource CreateJob_EncryptionKey}" />
                            <TextBox x:Name="EncryptionKeyTextBox" Height="30" Margin="0,5,0,15"/>

                            <TextBlock FontWeight="Bold" Text="{DynamicResource CreateJob_ExtensionsToEncrypt}" />
                            <TextBlock Text="{DynamicResource CreateJob_ExtensionsHint}"
                                       FontSize="11" Foreground="Gray" Margin="0,2"/>
                            <TextBox x:Name="ExtensionsTextBox" Height="30" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource Common_Create}"
                    Width="120" Height="40" Margin="0,0,10,0"
                    Click="Create_Click"
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="{DynamicResource Common_Cancel}"
                    Width="120" Height="40"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
