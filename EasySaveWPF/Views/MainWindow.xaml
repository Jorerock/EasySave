<Window x:Class="EasySave.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource App_Title}"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <DockPanel LastChildFill="True">
                <TextBlock Text="{DynamicResource Header_Title}"
                           FontSize="24" FontWeight="Bold"
                           Foreground="White"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource Language_Label}"
                               Foreground="White"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>

                    <ComboBox Width="140"
                              SelectionChanged="Language_SelectionChanged">
                        <ComboBoxItem Content="{DynamicResource Language_French}" Tag="fr-FR" IsSelected="True"/>
                        <ComboBoxItem Content="{DynamicResource Language_English}" Tag="en-US"/>
                    </ComboBox>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Job List -->
            <GroupBox Grid.Column="0" Header="{DynamicResource Group_Jobs}" Margin="0,0,10,0">
                <DataGrid ItemsSource="{Binding Jobs}"
                          SelectedItem="{Binding SelectedJob}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Col_Name}" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="{DynamicResource Col_Type}" Binding="{Binding Type}" Width="100"/>
                        <DataGridTextColumn Header="{DynamicResource Col_Source}" Binding="{Binding SourceDirectory}" Width="150"/>
                        <DataGridTextColumn Header="{DynamicResource Col_Target}" Binding="{Binding TargetDirectory}" Width="150"/>
                        <DataGridCheckBoxColumn Header="{DynamicResource Col_Encrypted}" Binding="{Binding EnableEncryption}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" Background="LightGray"/>

            <!-- Actions Panel -->
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <GroupBox Header="{DynamicResource Group_Actions}">
                    <StackPanel>
                        <Button Content="{DynamicResource Btn_CreateNewJob}"
                                Click="CreateJob_Click"
                                Margin="0,5" Padding="10" Height="40"/>

                        <Button Content="{DynamicResource Btn_RunSelected}"
                                Command="{Binding RunJobCommand}"
                                Margin="0,5" Padding="10" Height="40"/>

                        <Button Content="{DynamicResource Btn_RunAll}"
                                Command="{Binding RunAllCommand}"
                                Margin="0,5" Padding="10" Height="40"/>

                        <Button Content="{DynamicResource Btn_Delete}"
                                Command="{Binding DeleteJobCommand}"
                                Margin="0,5" Padding="10" Height="40"
                                Background="#F44336" Foreground="White"/>
                    </StackPanel>
                </GroupBox>

                <!-- Job Details -->
                <GroupBox Header="{DynamicResource Group_Details}" Margin="0,20,0,0">
                    <StackPanel DataContext="{Binding SelectedJob}">
                        <TextBlock Margin="5">
                            <Run Text="{DynamicResource Label_Name}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding Name}"/>
                        </TextBlock>

                        <TextBlock Margin="5">
                            <Run Text="{DynamicResource Label_Type}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding Type}"/>
                        </TextBlock>

                        <TextBlock Margin="5" TextWrapping="Wrap">
                            <Run Text="{DynamicResource Label_Source}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding SourceDirectory}"/>
                        </TextBlock>

                        <TextBlock Margin="5" TextWrapping="Wrap">
                            <Run Text="{DynamicResource Label_Target}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding TargetDirectory}"/>
                        </TextBlock>

                        <TextBlock Margin="5">
                            <Run Text="{DynamicResource Label_Encryption}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding EnableEncryption}"/>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#f5f5f5" Padding="10" BorderThickness="0,1,0,0" BorderBrush="#ddd">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
        </Border>
    </Grid>
</Window>
