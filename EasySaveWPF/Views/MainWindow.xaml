<Window x:Class="EasySave.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <TextBlock Text="EasySave - Backup Manager" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Job List -->
            <GroupBox Grid.Column="0" Header="Backup Jobs" Margin="0,0,10,0">
                <DataGrid ItemsSource="{Binding Jobs}" 
                          SelectedItem="{Binding SelectedJob}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                        <DataGridTextColumn Header="Source" Binding="{Binding SourceDirectory}" Width="150"/>
                        <DataGridTextColumn Header="Target" Binding="{Binding TargetDirectory}" Width="150"/>
                        <DataGridCheckBoxColumn Header="Encrypted" Binding="{Binding EnableEncryption}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" Background="LightGray"/>

            <!-- Actions Panel -->
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <GroupBox Header="Actions">
                    <StackPanel>
                        <Button Content="Create New Job" 
                        Click="CreateJob_Click"
                        Margin="0,5" Padding="10" Height="40"/>

                        <Button Content="Run Selected" 
                                Command="{Binding RunJobCommand}"
                                Margin="0,5" Padding="10" Height="40"/>

                        <Button Content="Run All Jobs" 
                                Command="{Binding RunAllCommand}"
                                Margin="0,5" Padding="10" Height="40"/>

                        <Button Content="Delete Job" 
                                Command="{Binding DeleteJobCommand}"
                                Margin="0,5" Padding="10" Height="40"
                                Background="#F44336" Foreground="White"/>

                        <Button Content="AppSettings" 
                        Click="AppSettings_Click"
                        Margin="0,5" Padding="10" Height="40"/>
                    </StackPanel>
                </GroupBox>

                <!-- Job Details -->
                <GroupBox Header="Selected Job Details" Margin="0,20,0,0">
                    <StackPanel DataContext="{Binding SelectedJob}">
                        <TextBlock Text="{Binding Name, StringFormat='Name: {0}'}" 
                                   Margin="5"/>
                        <TextBlock Text="{Binding Type, StringFormat='Type: {0}'}" 
                                   Margin="5"/>
                        <TextBlock Text="{Binding SourceDirectory, StringFormat='Source: {0}'}" 
                                   Margin="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding TargetDirectory, StringFormat='Target: {0}'}" 
                                   Margin="5" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding EnableEncryption, StringFormat='Encryption: {0}'}" 
                                   Margin="5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#f5f5f5" Padding="10" BorderThickness="0,1,0,0" BorderBrush="#ddd">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
        </Border>
    </Grid>
</Window>